<tbody>
  <% book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to (attachment_image_tag book_comment.user, :profile_image, format: 'jpg', fallback: "no_image.jpg", style: "width: 40px; height: 40px;"), user_path(@book.user) %>
      <br>
      <%= link_to "#{book_comment.user.name}", user_path(book_comment.user.id) %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <td>
      <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>