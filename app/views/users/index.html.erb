<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", style: "width: 100px; height: 100px;" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user_find == current_user %>
            <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% else %>
            <%= link_to "", user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model: @book, url:'/books', local:true do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
            <br>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <br>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>
          <div class="actions row">
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-9">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", style: "width: 40px; height: 40px;" %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
